extends ../layout

block content
  head
    include ../static_content/head
    script(src="/dist/js/demo.js")
    link(rel="stylesheet" href="/dist/css/bootstrap-tagsinput.css")
    script(src="/dist/js/bootstrap-tagsinput.js")

  body.hold-transition.skin-blue.sidebar-mini
    .wrapper
      include ../static_content/navbar
      include ../static_content/sidebar

      .content-wrapper(style="margin-top: 50px;")
        section.content-header
          h1
            | Timeline
            small example
          |       
          ol.breadcrumb
            li
              a(href="#")
                i.fa.fa-dashboard
                |  Home
            |         
            li
              a(href="#") UI
            |         
            li.active Timeline
        // Main content
        section.content
          #myModal.modal.fade(role='dialog', style="margin-top:150px;")
            .modal-dialog
              .modal-content
                .modal-header
                  button.close(type='button', data-dismiss='modal') Ã—
                  h4.modal-title Add some labels
                .modal-body
                  label(for='pwd') Labels: &nbsp;
                  input(id="tagsInput" type="text" value="" data-role="tagsinput" placeholder="Add tags here...")
                .modal-footer
                  button.btn.btn-primary(type='button', data-dismiss='modal', ng-click="devDashboardCtrl.saveUIComponent()") OK

          // row
          .row
            .col-md-12
              div(id="timeline-main-btn")
                a.btn.btn-social-icon(data-toggle="dropdown" href="#" aria-expanded="false")
                  i.fa.fa-plus(style="font-size: 18px")
                ul.dropdown-menu(ng-if="devDashboardCtrl.applications.length > 0" style="position: absolute; top: 33px; left: 10px")
                  li(style="cursor: pointer; pointer-events:none; opacity: 0.6;" role="presentation")
                    a(role="menuitem") Add element to Favorites
                  li(style="cursor: pointer;" role="presentation" ng-repeat="app in devDashboardCtrl.applications")
                    a(role="menuitem" data-toggle="modal" data-target="#myModal" ng-click="devDashboardCtrl.addUIComponent(app.repo_id,'timeline','timeline-main');") {{ app.name }}
                      i.fa.fa-check.pull-right(ng-if="app.components.includes('timeline-main')" style="position: relative; top: 3px; color: #008000;")
              div(id="timeline-main")
                // The time line
                ul.timeline
                  // timeline time label
                  li.time-label
                    span.bg-red
                      | 10 Feb. 2014
                  // /.timeline-label
                  // timeline item
                  li
                    i.fa.fa-envelope.bg-blue
                    |               
                    .timeline-item
                      span.time
                        i.fa.fa-clock-o
                        |  12:05
                      |                 
                      h3.timeline-header
                        a(href="#") Support Team
                        |  sent you an email
                      |                 
                      .timeline-body
                        | Etsy doostang zoodles disqus groupon greplin oooj voxy zoodles,
                        | weebly ning heekya handango imeem plugg dopplr jibjab, movity
                        | jajah plickers sifteo edmodo ifttt zimbra. Babblely odeo kaboodle
                        | quora plaxo ideeli hulu weebly balihoo...
                      |                 
                      .timeline-footer
                        a.btn.btn-primary.btn-xs Read more
                        |                   
                        a.btn.btn-danger.btn-xs Delete
                  // END timeline item
                  // timeline item
                  li
                    i.fa.fa-user.bg-aqua
                    |               
                    .timeline-item
                      span.time
                        i.fa.fa-clock-o
                        |  5 mins ago
                      |                 
                      h3.timeline-header.no-border
                        a(href="#") Sarah Young
                        |  accepted your friend request
                  // END timeline item
                  // timeline item
                  li
                    i.fa.fa-comments.bg-yellow
                    |               
                    .timeline-item
                      span.time
                        i.fa.fa-clock-o
                        |  27 mins ago
                      |                 
                      h3.timeline-header
                        a(href="#") Jay White
                        |  commented on your post
                      |                 
                      .timeline-body
                        | Take me to your leader!
                        | Switzerland is small and neutral!
                        | We are more like Germany, ambitious and misunderstood!
                      |                 
                      .timeline-footer
                        a.btn.btn-warning.btn-flat.btn-xs View comment
                  // END timeline item
                  // timeline time label
                  li.time-label
                    span.bg-green
                      | 3 Jan. 2014
                  // /.timeline-label
                  // timeline item
                  li
                    i.fa.fa-camera.bg-purple
                    |               
                    .timeline-item
                      span.time
                        i.fa.fa-clock-o
                        |  2 days ago
                      |                 
                      h3.timeline-header
                        a(href="#") Mina Lee
                        |  uploaded new photos
                      |                 
                      .timeline-body
                        img.margin(src="http://placehold.it/150x100", alt="...")
                        |                   
                        img.margin(src="http://placehold.it/150x100", alt="...")
                        |                   
                        img.margin(src="http://placehold.it/150x100", alt="...")
                        |                   
                        img.margin(src="http://placehold.it/150x100", alt="...")
                  // END timeline item
                  // timeline item
                  li
                    i.fa.fa-video-camera.bg-maroon
                    |               
                    .timeline-item
                      span.time
                        i.fa.fa-clock-o
                        |  5 days ago
                      |                 
                      h3.timeline-header
                        a(href="#") Mr. Doe
                        |  shared a video
                      |                 
                      .timeline-body
                        .embed-responsive.embed-responsive-16by9
                          iframe.embed-responsive-item(src="https://www.youtube.com/embed/tMWkeBIohBs", frameborder="0", allowfullscreen="")
                      |                 
                      .timeline-footer
                        a.btn.btn-xs.bg-maroon(href="#") See comments
                  // END timeline item
                  li
                    i.fa.fa-clock-o.bg-gray
              // /.col
            // /.row
          .row(style="margin-top: 10px;")
            .col-md-12
              div(id="timeline-markup-btn")
                a.btn.btn-social-icon(data-toggle="dropdown" href="#" aria-expanded="false")
                  i.fa.fa-plus(style="font-size: 18px")
                ul.dropdown-menu(ng-if="devDashboardCtrl.applications.length > 0" style="position: absolute; top: 33px; left: 10px")
                  li(style="cursor: pointer; pointer-events:none; opacity: 0.6;" role="presentation")
                    a(role="menuitem") Add element to Favorites
                  li(style="cursor: pointer;" role="presentation" ng-repeat="app in devDashboardCtrl.applications")
                    a(role="menuitem" data-toggle="modal" data-target="#myModal" ng-click="devDashboardCtrl.addUIComponent(app.repo_id,'timeline','timeline-markup');") {{ app.name }}
                      i.fa.fa-check.pull-right(ng-if="app.components.includes('timeline-markup')" style="position: relative; top: 3px; color: #008000;")
              .box.box-primary
                .box-header
                  h3.box-title
                    i.fa.fa-code
                    |  Timeline Markup
                |             
                .box-body(id="timeline-markup")
                  pre(style="font-weight: 600;").
                    ul.timeline
                      li.time-label
                        span.bg-red
                        | 10 Feb. 2014

                      li
                        i.fa fa-envelope bg-blue
                        .timeline-item
                            span.time
                              | i.fa fa-clock-o
                              | 12:05

                            h3.timeline-header
                              a(href="#") 
                              | Support Team 
                              | ...
                            .timeline-body
                            |...
                            | Content goes here

                            timeline-footer
                              a.btn.btn-primary.btn-xs
                              | ...

      include ../static_content/dashboard_footer